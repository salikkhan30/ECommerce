
@model Product

<h3>Edit Product</h3>

<form id="editProductForm">

    <input type="text" name="Id" value="@Model.Id" id="itemId" hidden/>

    <label>Name</label>
    <input type="text" name="Name" value="@Model.Name" />
    <br />
    <label>Code</label>
    <input type="text" name="Code" value="@Model.Code" />
    <br />
    <label>Description</label>
    <input type="text" name="Description" value="@Model.Description" />
    <br />
    <label>Price</label>
    <input type="number" name="Price" value="@Model.Price" />
    <br />
    <button type="button" id="updateProductBtn">Update</button>

</form>


<script type="text/javascript">

    $('#updateProductBtn').click(function () {

        $.ajax({
            type: 'POST',
            url: '/Product/Edit',
            data: $("#editProductForm").serialize()

        }).done(function (response) {
            $('#tablediv').html(response);
            $('#actionContainer').empty();

        }).fail(function (XMLHttpRequest, textStatus, errorThrown) {
            alert('fail');
        })

    });

</script>



